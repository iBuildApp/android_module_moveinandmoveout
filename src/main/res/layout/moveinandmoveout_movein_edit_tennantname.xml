<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:orientation="vertical"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp">

        <TextView
            android:id="@+id/moveinandmoveout_edit_tenantname_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:paddingTop="@dimen/moveinandmoveout_padding_top"
            android:paddingBottom="5dp"
            android:paddingLeft="0dp"
            android:paddingRight="0dp"
            android:layout_margin="0dp"
            android:textSize="@dimen/moveinandmoveout_title_size"
            android:text="@string/moveinandmoveout_tenantName"
            android:alpha="0.7"/>

        <EditText
            android:id="@+id/moveinandmoveout_edit_tennantname_value"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/moveinandmoveout_padding_top"
            android:paddingBottom="0dp"
            android:paddingLeft="0dp"
            android:layout_margin="0dp"
            android:textSize="@dimen/moveinandmoveout_value_size"
            android:hint="@string/moveinandmoveout_entername"
            android:background="@null"/>
    </LinearLayout>

    <View
        android:id="@+id/moveinandmoveout_edit_tennantname_separator"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#1A000000"
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="1dp"/>

</LinearLayout>