<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:scrollbars="none">
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical">
    <LinearLayout
        android:id="@+id/moveinandmoveout_property_detail_mainlayout"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/moveinandmoveout_main_header_background"
        android:layout_height="40dp">

        <TextView
            android:id="@+id/moveinandmoveout_property_detail_flatnumber"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:textColor="#000000"
            android:gravity="left|center_vertical"
            android:textSize="@dimen/moveinandmoveout_main_text_size"
            android:alpha="0.7"/>
        <TextView
            android:id="@+id/moveinandmoveout_property_detail_monthlyrent"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:textColor="#000000"
            android:gravity="left|center_vertical"
            android:textSize="@dimen/moveinandmoveout_main_text_size"
            android:alpha="0.7"/>

        <TextView
            android:id="@+id/moveinandmoveout_property_detail_status"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="8dp"
            android:gravity="end|center_vertical"
            android:textColor="#000000"
            android:textSize="@dimen/moveinandmoveout_main_text_size"
            android:alpha="0.7"/>

    </LinearLayout>

  </LinearLayout>

</ScrollView>